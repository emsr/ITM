	if test ! -d $(OUT_DIR); then \
	  mkdir $(OUT_DIR); \
	fi

$(OBJ_DIR): $(OUT_DIR)
	if test ! -d $(OBJ_DIR); then \
	  mkdir $(OBJ_DIR); \
	fi

$(INST_INC_DIR):
	if test ! -d $(INST_INC_DIR); then \
	  mkdir $(INST_INC_DIR); \
	fi

$(INST_LIB_DIR):
	if test ! -d $(INST_LIB_DIR); then \
	  mkdir $(INST_LIB_DIR); \
	fi

$(INST_BIN_DIR):
	if test ! -d $(INST_BIN_DIR); then \
	  mkdir $(INST_BIN_DIR); \
	fi

$(CD_DIR):
	if test ! -d $(CD_DIR); then \
	  mkdir $(CD_DIR); \
	fi

$(PROD_DIR): $(CD_DIR)
	if test ! -d $(PROD_DIR); then \
	  mkdir $(PROD_DIR); \
	fi

$(OS_DIR): $(PROD_DIR)
	if test ! -d $(OS_DIR); then \
	  mkdir $(OS_DIR); \
	fi

$(ABI_DIR): $(OS_DIR)
	if test ! -d $(ABI_DIR); then \
	  mkdir $(ABI_DIR); \
	fi

$(DOCS_DIR): $(PROD_DIR)
	if test ! -d $(DOCS_DIR); then \
	  mkdir $(DOCS_DIR); \
	fi

$(HTML_DIR): $(DOCS_DIR)
	if test ! -d $(HTML_DIR); then \
	  mkdir $(HTML_DIR); \
	fi
